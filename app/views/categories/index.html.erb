<div class="container">
	<p style="color: green"><%= notice %></p>

	<h1>Categories</h1>

	<ul id="categories" class="list-unstyled">
		<% @categories.each do |category| %>
			<li>
				<img src="#{category.icon}" alt="Category icon" class="rounded float-left">          
				<%= link_to category.name, category_entities_path(category.id), class:"text-decoration-none"%>	
					
			</li>
		<% end %>
	</ul>

	<%= link_to "Add New Category", new_category_path, class: 'btn btn-primary block' %> 
	
</div>
